# Maintainer: Sam Mulvey <archlinux at sammulvey.com>
# should probably go in AUR
pkgname=silentjack
pkgver=0.3
pkgrel=1
pkgdesc="dead air detection for jackd"
arch=('x86_64' 'armv7h')
url="https://www.aelius.com/njh/silentjack/"
license=('GPL')
depends=('jack')
source=("https://www.aelius.com/njh/$pkgname/$pkgname-$pkgver.tar.gz")
sha256sums=('87025362cd86d98f8a484e49614696a6a113562d5af45781d9bb4a86e2b1e019')


prepare() {
	cd "$pkgname-$pkgver"
}

build() {
	cd "$pkgname-$pkgver"
	./configure --prefix=/usr
	make
}

check() {
	cd "$pkgname-$pkgver"
	make -k check
}

package() {
	cd "$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
}
