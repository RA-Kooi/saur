# Maintainer: Sam Mulvey <archlinux@sammulvey.com>
pkgname=jack-peak-git
pkgver=20200323.b3ffd4e
pkgrel=1
pkgdesc="text mode JACK meter, include JSON"
arch=('x86_64' 'aarch64')
url="http://gareus.org/gitweb/?p=jack-peak.git"
license=('GPL2')
depends=('jack')
makedepends=('git' 'pkgconf') 
source=('git+https://github.com/refutationalist/jack-peak')
md5sums=('SKIP')

pkgver() {
	cd "${srcdir}/${_pkgname}"
	git log -1 --format='%cd.%h' --date=short | tr -d -
}


build() {
	cd "$srcdir/${pkgname%-git}"
	make
}

package() {
	cd "$srcdir/${pkgname%-git}"
	make PREFIX="/usr" DESTDIR="$pkgdir/" install
}
